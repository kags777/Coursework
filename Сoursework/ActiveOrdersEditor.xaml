<UserControl x:Class="Coursework.ActiveOrdersEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="10">
        <TextBlock Text="Активные заказы" FontWeight="Bold" Margin="0,0,0,5"/>

        <ListBox x:Name="OrdersList"
                 DisplayMemberPath="DisplayName"
                 Height="250"/>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Просмотр"
                    Width="120"
                    Click="ViewOrder_Click"/>
            
            <Button Content="✔ Завершить"
                    Width="120"
                    Margin="10,0,0,0"
                    Click="CompleteOrder_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>
