<Window x:Class="Coursework.CarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать машину"
        Height="500" Width="350">
    <StackPanel Margin="10" VerticalAlignment="Top">

        <TextBlock Text="Госномер"/>
        <TextBox x:Name="Number"/>

        <TextBlock Text="Марка"/>
        <TextBox x:Name="Brand"/>

        <TextBlock Text="Модель"/>
        <TextBox x:Name="Model"/>

        <TextBlock Text="Грузоподъемность"/>
        <TextBox x:Name="MaxLoad"/>

        <TextBlock Text="Назначение"/>
        <TextBox x:Name="Appointment"/>

        <TextBlock Text="Год выпуска"/>
        <TextBox x:Name="YearBorn"/>

        <TextBlock Text="Год ремонта"/>
        <TextBox x:Name="YearRepairs"/>

        <TextBlock Text="Пробег"/>
        <TextBox x:Name="Mileage"/>

        <TextBlock Text="Фото (путь)"/>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="Photo" Width="200"/>
            <Button Content="Выбрать фото" Click="SelectPhoto_Click" Margin="5,0,0,0"/>
        </StackPanel>

        <Button Content="Сохранить" Click="Save_Click" Margin="0,10,0,0" Height="30"/>
    </StackPanel>
</Window>
