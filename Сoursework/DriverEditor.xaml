<UserControl x:Class="Coursework.DriverEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="10">
        <ListBox x:Name="DriverList" Height="150"/>
        <Button Content="Добавить водителя" Click="AddDriver_Click" Margin="0,5,0,0"/>
        <Button Content="Редактировать водителя" Click="EditDriver_Click" Margin="0,5,0,0"/>
        <Button Content="Удалить водителя" Click="DeleteDriver_Click" Margin="0,5,0,0"/>
    </StackPanel>
</UserControl>
