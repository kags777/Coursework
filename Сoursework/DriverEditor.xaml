<UserControl x:Class="Coursework.DriverEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="500" Width="350">
    <StackPanel Margin="10">
        <TextBlock Text="Список водителей" FontWeight="Bold" Margin="0,0,0,5"/>
        <ListBox x:Name="DriverListBox" DisplayMemberPath="NameDriver" Height="350"/>
        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
            <Button Content="Добавить" Click="AddDriver_Click" Width="100"/>
            <Button Content="Редактировать" Click="EditDriver_Click" Width="100" Margin="5,0,0,0"/>
            <Button Content="Удалить" Click="DeleteDriver_Click" Width="100" Margin="5,0,0,0"/>
        </StackPanel>
    </StackPanel>
</UserControl>
