<UserControl x:Class="Coursework.OrderEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="800" Width="400">
    <ScrollViewer>
        <StackPanel Margin="10">

            <!-- Тип клиента -->
            <TextBlock Text="Тип клиента:" Margin="0,5,0,0"/>
            <ComboBox x:Name="ClientTypeComboBox" SelectedIndex="0">
                <ComboBoxItem Content="Физическое лицо"/>
                <ComboBoxItem Content="Юридическое лицо"/>
            </ComboBox>

            <!-- Физическое лицо -->
            <TextBlock Text="ФИО клиента:" Margin="0,5,0,0"/>
            <TextBox x:Name="NameClientBox"/>
            <TextBlock Text="Телефон клиента:"/>
            <TextBox x:Name="PhoneClientBox"/>
            <TextBlock Text="Паспорт (серия и номер):"/>
            <TextBox x:Name="PassportBox"/>

            <!-- Юридическое лицо -->
            <TextBlock Text="Название организации:" Margin="0,5,0,0"/>
            <TextBox x:Name="LegalNameBox"/>
            <TextBlock Text="ФИО руководителя:"/>
            <TextBox x:Name="LeaderNameBox"/>
            <TextBlock Text="Юридический адрес:"/>
            <TextBox x:Name="LegalAddressBox"/>
            <TextBlock Text="Телефон организации:"/>
            <TextBox x:Name="LegalPhoneBox"/>
            <TextBlock Text="Банк:"/>
            <TextBox x:Name="BankBox"/>
            <TextBlock Text="Расчетный счет:"/>
            <TextBox x:Name="BankAccountBox"/>
            <TextBlock Text="ИНН:"/>
            <TextBox x:Name="TINBox"/>

            <!-- Адреса и маршрут -->
            <TextBlock Text="Адрес загрузки:" Margin="0,10,0,0"/>
            <TextBox x:Name="LoadingAddressBox"/>
            <TextBlock Text="Адрес выгрузки:"/>
            <TextBox x:Name="UnloadingAddressBox"/>
            <TextBlock Text="Длина маршрута (км):"/>
            <TextBox x:Name="RouteLengthBox"/>

            <!-- Грузы -->
            <TextBlock Text="Грузы:" Margin="0,10,0,0"/>
            <ListBox x:Name="CargoListBox" DisplayMemberPath="Nomination" Height="120"/>
            <Button Content="Добавить груз" Click="AddCargo_Click" Margin="0,5,0,0"/>

            <!-- Сохранить заказ -->
            <Button Content="Сохранить заказ" Click="Save_Click" Margin="0,15,0,0"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>
