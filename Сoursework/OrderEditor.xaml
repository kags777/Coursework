<UserControl x:Class="Coursework.OrderEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer>
        <StackPanel Margin="10" Width="400">

            <!-- Тип клиента -->
            <TextBlock Text="Тип клиента:"/>
            <ComboBox x:Name="ClientType" SelectedIndex="0">
                <ComboBoxItem Content="Физическое"/>
                <ComboBoxItem Content="Юридическое"/>
            </ComboBox>

            <!-- Информация о клиенте -->
            <TextBlock Text="ФИО / Название:"/>
            <TextBox x:Name="NameClient"/>

            <TextBlock Text="Телефон:"/>
            <TextBox x:Name="PhoneClient"/>

            <TextBlock Text="Паспорт / ИНН:"/>
            <TextBox x:Name="PassportOrTIN"/>

            <TextBlock Text="Руководитель / Банк:"/>
            <TextBox x:Name="LeaderOrBank"/>

            <TextBlock Text="Адрес / Расчетный счет:"/>
            <TextBox x:Name="AddressOrAccount"/>

            <!-- Адреса и маршрут -->
            <TextBlock Text="Адрес загрузки:"/>
            <TextBox x:Name="LoadingAddress"/>

            <TextBlock Text="Адрес выгрузки:"/>
            <TextBox x:Name="UnloadingAddress"/>

            <TextBlock Text="Длина маршрута (км):"/>
            <TextBox x:Name="RouteLength"/>

            <!-- Грузы -->
            <TextBlock Text="Грузы:" Margin="0,10,0,0"/>
            <ListBox x:Name="CargoList" Height="120"/>

            <Button Content="Добавить груз" Click="AddCargo_Click" Margin="0,5,0,0"/>
            <Button Content="Сохранить заказ" Click="Save_Click" Margin="0,15,0,0"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>
