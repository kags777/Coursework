<UserControl x:Class="Coursework.OrderEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="10">

        <TextBlock Text="Дата загрузки"/>
        <DatePicker SelectedDate="{Binding DateLoading}"/>

        <TextBlock Text="Дата выгрузки"/>
        <DatePicker SelectedDate="{Binding DateUnloading}"/>

        <TextBlock Text="Адрес загрузки"/>
        <TextBox Text="{Binding LoadingAddress}"/>

        <TextBlock Text="Адрес выгрузки"/>
        <TextBox Text="{Binding UnloadingAddress}"/>

        <TextBlock Text="Длина маршрута (км)"/>
        <TextBox Text="{Binding RouteLength}"/>

        <TextBlock Text="Грузы"/>
        <ListBox x:Name="CargoList" Height="100"/>

        <!-- 🔥 ВОТ ЭТА КНОПКА -->
        <Button Content="Добавить груз"
                Margin="0,5,0,0"
                Click="AddCargo_Click"/>

        <Button Content="Сохранить заказ"
                Margin="0,15,0,0"
                Click="Save_Click"/>

    </StackPanel>
</UserControl>
