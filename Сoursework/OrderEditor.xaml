<UserControl x:Class="Coursework.OrderEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="10">
        <TextBlock Text="Дата загрузки"/>
        <DatePicker SelectedDate="{Binding DateLoading}"/>
        <TextBlock Text="Дата выгрузки"/>
        <DatePicker SelectedDate="{Binding DateUnloading}"/>
        <TextBlock Text="Отправитель"/>
        <TextBox Text="{Binding ClientSender, Mode=TwoWay}"/>
        <TextBlock Text="Адрес загрузки"/>
        <TextBox Text="{Binding LoadingAddress, Mode=TwoWay}"/>
        <TextBlock Text="Получатель"/>
        <TextBox Text="{Binding ClientRecipient, Mode=TwoWay}"/>
        <TextBlock Text="Адрес выгрузки"/>
        <TextBox Text="{Binding UnloadingAddress, Mode=TwoWay}"/>
        <TextBlock Text="Длина маршрута"/>
        <TextBox Text="{Binding RouteLength, Mode=TwoWay}"/>

        <TextBlock Text="Грузы"/>
        <Button Content="Добавить груз" Click="AddCargo_Click"/>
        <ListBox ItemsSource="{Binding CargoList}"/>

        <TextBlock Text="Назначить машину"/>
        <ComboBox x:Name="CarComboBox"/>
        <TextBlock Text="Назначить водителя"/>
        <ComboBox x:Name="DriverComboBox"/>

        <Button Content="Сохранить" Click="Save_Click" Margin="0,20,0,0"/>
    </StackPanel>
</UserControl>
