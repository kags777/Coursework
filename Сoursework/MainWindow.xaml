<Window x:Class="Coursework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Грузоперевозки byKags" Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Button Content="Создать заказ" Click="CreateOrder_Click" Margin="10,10"/>
            <Button Content="Управление машинами" Click="ManageCars_Click" Margin="10,10"/>
            <Button Content="Управление водителями" Click="ManageDrivers_Click" Margin="10,10"/>
            <Button Content="Активные заказы" Click="ActiveOrders_Click" Margin="10,10"/>
        </StackPanel>

        <ContentControl x:Name="RightPanel" Grid.Column="1"/>
    </Grid>
</Window>
