<Window x:Class="Coursework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Грузоперевозки" Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10">
            <Button Content="Создать заказ" Click="CreateOrder_Click"/>
            <Button Content="Созданные заказы" Click="CreatedOrders_Click"/>
            <Button Content="Активные заказы" Click="ActiveOrders_Click"/>
            <Separator/>
            <Button Content="Машины" Click="ManageCars_Click"/>
            <Button Content="Водители" Click="ManageDrivers_Click"/>
            <Separator/>
            <Button Content="❌ Очистить JSON"
                    Background="IndianRed"
                    Click="ClearData_Click"/>
        </StackPanel>

        <ContentControl x:Name="RightPanel" Grid.Column="1"/>
    </Grid>
</Window>
