<Window x:Class="Coursework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Грузоперевозки" Height="800" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель кнопок -->
        <StackPanel Grid.Column="0" Margin="5">
            <Button Content="Создать заказ" Click="CreateOrder_Click" Margin="0,5"/>
            <Button Content="Машины" Click="ManageCars_Click" Margin="0,5"/>
            <Button Content="Водители" Click="ManageDrivers_Click" Margin="0,5"/>
            <Button Content="Созданные заказы" Click="CreatedOrders_Click" Margin="0,5"/>
            <Button Content="Активные заказы" Click="ActiveOrders_Click" Margin="0,5"/>
            <Button Content="Выполненные заказы" Click="CompletedOrders_Click" Margin="0,5"/>
            <Button Content="Очистить JSON"
                    Click="ClearData_Click"
                    Margin="0,20,0,0"
                    Background="Red"
                    Foreground="White"
                    FontWeight="Bold"/>
        </StackPanel>

        <!-- Правая панель с прокруткой -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <ContentControl x:Name="RightPanel"/>
        </ScrollViewer>
    </Grid>
</Window>
