<Window x:Class="Coursework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Грузоперевозки" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10">
            <Button Content="Создать заказ" Click="CreateOrder_Click" Margin="0,0,0,10"/>
            <Button Content="Управление машинами" Click="ManageCars_Click" Margin="0,0,0,10"/>
            <Button Content="Управление водителями" Click="ManageDrivers_Click" Margin="0,0,0,10"/>
            <Button Content="Активные заказы" Click="ActiveOrders_Click"/>
        </StackPanel>

        <ContentControl x:Name="RightPanel" Grid.Column="1"/>
    </Grid>
</Window>
