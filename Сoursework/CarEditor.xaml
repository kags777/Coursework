<UserControl x:Class="Coursework.CarEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="10">
        <TextBlock Text="Список машин"/>
        <ListBox x:Name="CarListBox" DisplayMemberPath="Number" Height="200"/>
        <Button Content="Добавить машину" Click="AddCar_Click" Margin="0,10,0,0"/>
        <Button Content="Удалить машину" Click="RemoveCar_Click" Margin="0,5,0,0"/>
    </StackPanel>
</UserControl>
