<Window x:Class="Coursework.CargoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавить груз" Height="300" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Наименование"/>
        <TextBox x:Name="Nomination"/>
        <TextBlock Text="Количество"/>
        <TextBox x:Name="Quantity"/>
        <TextBlock Text="Вес"/>
        <TextBox x:Name="Weight"/>
        <TextBlock Text="Стоимость"/>
        <TextBox x:Name="Cost"/>
        <CheckBox x:Name="FragileCargo" Content="Хрупкий груз"/>
        <Button Content="Сохранить" Click="Save_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
