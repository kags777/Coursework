<UserControl x:Class="Coursework.OrderViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer>
        <StackPanel Margin="10">
            <TextBlock Text="{Binding DisplayName}"
                       FontWeight="Bold"
                       FontSize="16"/>

            <TextBlock Text="{Binding Status}" Margin="0,5"/>

            <TextBlock Text="Маршрут:" FontWeight="Bold"/>
            <TextBlock Text="{Binding LoadingAddress}"/>
            <TextBlock Text="{Binding UnloadingAddress}"/>

            <TextBlock Text="Грузы:" FontWeight="Bold" Margin="0,10,0,0"/>
            <ItemsControl ItemsSource="{Binding Loads}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Nomination}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock Text="{Binding Cost, StringFormat='Стоимость: {0} ₽'}"
                       Margin="0,10,0,0"
                       FontWeight="Bold"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
