<Window x:Class="Coursework.DriverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать водителя" Height="400" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Табельный номер"/>
        <TextBox x:Name="PersNumber"/>
        <TextBlock Text="ФИО"/>
        <TextBox x:Name="NameDriver"/>
        <TextBlock Text="Возраст"/>
        <TextBox x:Name="Age"/>
        <TextBlock Text="Стаж (лет)"/>
        <TextBox x:Name="Experience"/>
        <TextBlock Text="Категория"/>
        <TextBox x:Name="Category"/>
        <TextBlock Text="Классность"/>
        <TextBox x:Name="Classic"/>
        <Button Content="Сохранить" Click="Save_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
